{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [ "node" ],
    "lib": [
      "es2018",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
